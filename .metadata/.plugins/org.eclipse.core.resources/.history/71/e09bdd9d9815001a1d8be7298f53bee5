package DP;

import java.util.Scanner;

public class Test {
	public static void main(String[] args) {
		int[] dp;
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();
		dp = new int[N+1];
		dp[1] = 0;
		dp[2] = 1;
		for(int i =3; i<=N; i++) {
				dp[i] = dp[i-1]+ dp[i-2] + i;
		}
		System.out.println(dp[N]);
	}
}
